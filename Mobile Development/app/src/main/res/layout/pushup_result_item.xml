<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/repetitionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Repetisi 1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hipPositionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_blue_background"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:text="Posisi Pinggul: Benar"/>

        <TextView
            android:id="@+id/hipScoreTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_green_background"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:text="Skor: 85"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/handPositionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_blue_background"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:text="Posisi Tangan: Salah"/>

        <TextView
            android:id="@+id/handScoreTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_green_background"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:text="Skor: 60"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/headPositionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_blue_background"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:text="Posisi Kepala: Salah"/>

        <TextView
            android:id="@+id/headScoreTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_green_background"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@android:color/white"
            android:text="Skor: 60"/>
    </LinearLayout>

    <TextView
        android:id="@+id/feedbackTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/holo_red_dark"
        android:text="Feedback: Pinggul harus berada dalam rentang 170-280 derajat, pastikan bahu, pinggul dan lutut lurus."/>
</LinearLayout>
