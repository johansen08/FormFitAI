<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splashScreen.SplashScreenActivity">

    <ImageView
        android:id="@+id/spash_screen_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/splash_screen_logo"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/splash_screen_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Be Healthy"
        android:layout_below="@+id/spash_screen_logo"
        android:textSize="40dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>